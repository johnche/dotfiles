# The earlier path segments gets higher priority
# If unimportant, append the new addition. If important, prepend it
# Start with most important top, and least important paths last

# ============= Prepend (more important) =============
# macports stuff
export PATH="/opt/local/sbin:$PATH"
export PATH="/opt/local/bin:$PATH"

# Rust
export PATH="$HOME/.cargo/bin:$PATH"

# Go
export PATH="$GOBIN:$PATH"

export PATH="$HOME/.local/bin:$PATH"

# ============= Append (less important) =============
#export PATH="$PATH:/Applications/MacPorts/Emacs.app/Contents/MacOS"

# doom bin dir
export PATH="$PATH:$HOME/.config/emacs/bin"

# Nix (macos)
export PATH="$PATH:/run/current-system/sw/bin"

# Added by Toolbox App
export PATH="$PATH:/Users/johnche/Library/Application Support/JetBrains/Toolbox/scripts"
